<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--接口的全路径，用于关联dao层接口-->
<mapper namespace="com.jxd.studentmanager.mapper.ICourseMapper">
    <select id="selectCoursesBytid" resultType="java.util.HashMap">
        select c.cid,cname,isdel,type,tc.tid from course c left join termcourse tc on c.cid = tc.cid
        <if test="tid != null and tid != ''">
            where tc.tid = #{tid}
        </if>
    </select>
</mapper>